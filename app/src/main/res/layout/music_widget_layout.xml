<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_selector"
    android:padding="8dp">

    <ImageView
        android:id="@+id/widget_album_art"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/widget_song_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/widget_album_art"
        android:layout_toStartOf="@+id/widget_controls"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:text="Song Title"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/widget_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/widget_play_pause_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circular_button_selector"
            android:src="@drawable/ic_play" />

        <ImageButton
            android:id="@+id/widget_stop_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/circular_button_selector"
            android:src="@drawable/ic_stop" />
    </LinearLayout>

</RelativeLayout>
